<html lang="en">
    <%- include('./partials/head.ejs') %>
<body>
   <%- include('./partials/nav.ejs') %>
    <div class="blogs content">
        <h2>All Blogs</h2>

        <%#looping throw the blog array to render the each of it.%>

        <% if (blogs.length > 0){ %>  
            <% blogs.forEach(blog => { %>

              <h3 class="title"><%= blog.title %></h3>
              <p class="snippet"><%= blog.snippet %></p> 

              <% }) %>
        <% } else { %>
              <p>No Blogs yet to render it</p>
            <% } %>
    </div>

    <%- include('./partials/footer.ejs') %>
</body>
</html>